/* Confirm Dialog */

@import "styles/colors.rasi"

* {
    background-color:   @alphabackground;
    text-color:         @foreground;
    font:				"CaskaydiaCove Nerd Font 12";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					1px;
    border-radius:          12px;
    border-color:           @border;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@foreground;
}
