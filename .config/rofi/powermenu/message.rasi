/* Message Dialog */

@import "styles/colors.rasi"

* {
    background-color:       @alphabackground;
    text-color:             @foreground;
	font:				 	"FantasqueSansMono Nerd Font 12";
}

window {
    width:      			360px;
    padding:    			25px;
    border:					1px;
    border-radius:          12px;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@foreground;
    background-color:		@alphabackground;
}
